#include <stdio.h>
  int main ()
  {
      int gs,bs,da,hra;
      printf("Enter Basic Salary:");
      scanf("%d",&bs);
      if (bs<1500)
      {
      hra=10/100*bs;
      da=10/100*bs;
      }
      else if (bs>=1500)
      {
      hra=500;
      da=98/100*bs;
      }
      gs=bs+da+hra;
      printf("gs=%d",gs);
      return 0;
  }
